            "id": {
              "type": "number",
              "example": 1
            },
            "name": {
              "type": "string",
              "example": "Nome do produto"
            }
          }
        }
      },
      "ProductSingle": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Nome do produto"
          }
        }
      },
      "SalesList": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "saleId": {
              "type": "number",
              "example": 1
            },
            "date": {
              "type": "string",
              "example": "2021-09-09T04:54:29.000Z"
            },
